<Window x:Class="CookieMonster.SpoofBrowser.CaptchaSolver.Solver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CookieMonster.SpoofBrowser.CaptchaSolver"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        mc:Ignorable="d"
        Title="Captcha Solver" Height="500" Width="480">
    <Grid>
        <ContentControl x:Name="browserContainer"/>
        <Rectangle Fill="#FF1F2125" x:Name="MainBackground"/>
        <fa:ImageAwesome x:Name="SpinIcon" Icon="Refresh" Spin="True" SpinDuration="3" Margin="150,165,150,165" Foreground="White"/>
        <Label x:Name="PageLbl" Content="Loading Captcha...." Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="10,409,10,10" FontSize="16" FontFamily="Poppins Medium" FontWeight="Medium"/>
    </Grid>
</Window>
